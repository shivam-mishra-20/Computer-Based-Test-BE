{
  "compilerOptions": {
  "target": "es2020",
  "module": "commonjs",
  "rootDir": "src",
  "outDir": "dist",

  // Node environment
  "lib": ["es2020"],
  "types": ["node"],

  // Output options
  "sourceMap": true,
  "declaration": true,
  "declarationMap": true,

  // Recommended
  "strict": true,
  "esModuleInterop": true,
  "resolveJsonModule": true,
  "skipLibCheck": true
  }
}
